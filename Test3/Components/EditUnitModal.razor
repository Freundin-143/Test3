@using Test3.Data.Models
@using Test3.Data.Services
@using Microsoft.AspNetCore.Components.Forms
@inject RoomService RoomService
@inject UtilityBillService UtilityBillService
@inject ImageService ImageService

<div class="modal-overlay @(IsVisible ? "visible" : "")">
    <div class="modal-content unit-modal">
        <div class="modal-header">
            <h3>@(IsEditing ? "Edit Unit" : "Add Unit")</h3>
            <button class="close-btn" @onclick="CloseModal">×</button>
        </div>

        <div class="modal-body">
            @if (isLoading)
            {
                <div class="loading">Loading unit data...</div>
            }
            else
            {
                <div class="form-grid">
                    <!-- Your existing form fields -->
                    <div class="form-group">
                        <label>Unit Number:</label>
                        <input @bind="CurrentRoom.UnitNumber" class="text-input" placeholder="e.g., Unit 101" />
                    </div>

                    <div class="form-group">
                        <label>Monthly Rent (₱):</label>
                        <input type="number" @bind="CurrentRoom.RoomPrice" class="text-input" placeholder="0.00" step="0.01" />
                    </div>

                    <div class="form-group">
                        <label>Bed Count:</label>
                        <select @bind="CurrentRoom.BedCount" class="select-input">
                            <option value="1">1 Bed</option>
                            <option value="2">2 Beds</option>
                            <option value="3">3 Beds</option>
                            <option value="4">4 Beds</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Room Type:</label>
                        <select @bind="CurrentRoom.RoomType" class="select-input">
                            <option value="Single">Single</option>
                            <option value="Double">Double</option>
                            <option value="Studio">Studio</option>
                            <option value="Suite">Suite</option>
                            <option value="Executive">Executive</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Status:</label>
                        <select @bind="CurrentRoom.Status" class="select-input">
                            <option value="Available">Available</option>
                            <option value="Occupied">Occupied</option>
                            <option value="Maintenance">Maintenance</option>
                        </select>
                    </div>

                    <div class="form-group checkbox-group">
                        <label class="checkbox-label">
                            <input type="checkbox" @bind="CurrentRoom.Aircon" />
                            <span class="checkmark"></span>
                            Air Conditioning
                        </label>
                    </div>

                    <div class="form-group full-width">
                        <label>Description:</label>
                        <textarea @bind="CurrentRoom.Description" class="text-input textarea"
                                  placeholder="Enter room description..." rows="3"></textarea>
                    </div>

                    <!-- Bill Management Section -->
                    <div class="form-group full-width bill-management-section">
                        <label>Monthly Bills Management</label>
                        <div class="bill-inputs">
                            <div class="bill-input-group">
                                <label>Electricity Bill (₱):</label>
                                <input type="number" @bind="CurrentElectricityBill" class="text-input"
                                       step="0.01" placeholder="0.00" />
                            </div>
                            <div class="bill-input-group">
                                <label>Water Bill (₱):</label>
                                <input type="number" @bind="CurrentWaterBill" class="text-input"
                                       step="0.01" placeholder="0.00" />
                            </div>
                        </div>
                        @if (IsEditing)
                        {
                            <button class="btn-manage-bills" @onclick="OpenBillManagement">
                                Manage Bills History
                            </button>
                        }
                    </div>

                    <!-- Your existing image upload section -->
                    <!-- ... -->
                </div>

                @if (!string.IsNullOrEmpty(saveMessage))
                {
                    <div class="save-message @(isError ? "error" : "success")">@saveMessage</div>
                }
            }
        </div>

        <div class="modal-footer">
            <button class="btn-cancel" @onclick="CloseModal" disabled="@isSaving">Cancel</button>
            <button class="btn-save" @onclick="SaveUnit" disabled="@isSaving">
                @if (isSaving)
                {
                    <span>Saving...</span>
                }
                else
                {
                    <span>Save Unit</span>
                }
            </button>
        </div>
    </div>
</div>

<!-- Bill Management Modal -->
@if (showBillModal)
{
    <ManageBill IsVisible="showBillModal"
                RoomId="@CurrentRoom.Id"
                UnitNumber="@CurrentRoom.UnitNumber"
                LandlordId="@LandlordId"
                OnBillsSaved="HandleBillsSaved" />
}

@code {
    [Parameter]
    public bool IsVisible { get; set; }

    [Parameter]
    public EventCallback<bool> IsVisibleChanged { get; set; }

    [Parameter]
    public Room? Room { get; set; }

    [Parameter]
    public EventCallback<Room> OnUnitSaved { get; set; }

    [Parameter]
    public string ApartmentId { get; set; } = string.Empty;

    [Parameter]
    public string LandlordId { get; set; } = string.Empty;

    private Room CurrentRoom = new();
    private bool isLoading = false;
    private bool isSaving = false;
    private string saveMessage = "";
    private bool isError = false;
    private bool IsEditing => Room?.Id != null;

    // Bill management
    private bool showBillModal = false;
    private decimal CurrentElectricityBill = 0;
    private decimal CurrentWaterBill = 0;

    protected override async void OnParametersSet()
    {
        if (IsVisible && Room != null)
        {
            await LoadRoomData();
        }
    }

    private async Task LoadRoomData()
    {
        if (Room != null)
        {
            CurrentRoom = new Room
            {
                Id = Room.Id,
                ApartmentId = Room.ApartmentId,
                UnitNumber = Room.UnitNumber,
                RoomType = Room.RoomType,
                RoomPrice = Room.RoomPrice,
                BedCount = Room.BedCount,
                Aircon = Room.Aircon,
                Status = Room.Status,
                Description = Room.Description,
                Images = Room.Images?.ToList() ?? new List<RoomImage>()
            };

            // Load current bills
            if (IsEditing)
            {
                await LoadCurrentBills();
            }
        }
        else
        {
            CurrentRoom = new Room
            {
                ApartmentId = ApartmentId,
                UnitNumber = "",
                RoomType = "Single",
                RoomPrice = 0,
                BedCount = 1,
                Aircon = false,
                Status = "Available",
                Description = "",
                Images = new List<RoomImage>()
            };
        }

        // Reset other fields...
    }

    private async Task LoadCurrentBills()
    {
        try
        {
            var currentBill = await UtilityBillService.GetCurrentBillAsync(CurrentRoom.Id);
            if (currentBill != null)
            {
                CurrentElectricityBill = currentBill.ElectricityBill;
                CurrentWaterBill = currentBill.WaterBill;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading bills: {ex.Message}");
        }
    }

    private void OpenBillManagement()
    {
        showBillModal = true;
        StateHasChanged();
    }

    private async Task HandleBillsSaved()
    {
        await LoadCurrentBills();
        showBillModal = false;
        StateHasChanged();
    }

    private async Task SaveUnit()
    {
        if (string.IsNullOrWhiteSpace(CurrentRoom.UnitNumber))
        {
            saveMessage = "Unit number is required.";
            isError = true;
            return;
        }

        isSaving = true;
        saveMessage = "";
        isError = false;
        StateHasChanged();

        try
        {
            // Save room data
            if (IsEditing)
            {
                await RoomService.UpdateRoomAsync(CurrentRoom.Id, CurrentRoom);

                // Save utility bills
                if (CurrentElectricityBill > 0 || CurrentWaterBill > 0)
                {
                    var currentDate = DateTime.UtcNow;
                    var utilityBill = new UtilityBill
                    {
                        RoomId = CurrentRoom.Id,
                        UnitNumber = CurrentRoom.UnitNumber,
                        LandlordId = LandlordId,
                        ElectricityBill = CurrentElectricityBill,
                        WaterBill = CurrentWaterBill,
                        Month = currentDate.Month,
                        Year = currentDate.Year,
                        DueDate = new DateTime(currentDate.Year, currentDate.Month, 1).AddMonths(1)
                    };

                    await UtilityBillService.CreateOrUpdateBillAsync(utilityBill);
                }

                saveMessage = "Unit updated successfully!";
            }
            else
            {
                var newRoom = await RoomService.CreateRoomAsync(ApartmentId);
                newRoom.UnitNumber = CurrentRoom.UnitNumber;
                newRoom.RoomType = CurrentRoom.RoomType;
                newRoom.RoomPrice = CurrentRoom.RoomPrice;
                newRoom.BedCount = CurrentRoom.BedCount;
                newRoom.Aircon = CurrentRoom.Aircon;
                newRoom.Status = CurrentRoom.Status;
                newRoom.Description = CurrentRoom.Description;
                newRoom.Images = CurrentRoom.Images;

                await RoomService.UpdateRoomAsync(newRoom.Id, newRoom);
                CurrentRoom = newRoom;
                saveMessage = "Unit created successfully!";
            }

            isError = false;
            await OnUnitSaved.InvokeAsync(CurrentRoom);
            await Task.Delay(1500);
            await CloseModal();
        }
        catch (Exception ex)
        {
            saveMessage = "Error saving unit. Please try again.";
            isError = true;
            Console.WriteLine($"Error saving unit: {ex.Message}");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private async Task CloseModal()
    {
        await IsVisibleChanged.InvokeAsync(false);
    }
}