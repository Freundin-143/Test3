@page "/EditApartment/{apartmentId}"
@using Test3.Data.Models
@using Test3.Data.Services
@inject ApartmentService ApartmentService
@inject RoomService RoomService
@inject ImageService ImageService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer
<link href="css/EditApartment.css" rel="stylesheet" />

<div class="edit-container">
    <div class="header">
        <button class="back-btn" @onclick="GoBack">←</button>
        <h2>EDIT APARTMENT</h2>
    </div>

    @if (isLoading)
    {
        <div class="loading">Loading apartment data...</div>
    }
    else if (apartment == null)
    {
        <div class="error">Apartment not found.</div>
        <button class="back-btn" @onclick="GoBack">Go Back</button>
    }
    else
    {
        <div class="form-grid">
            <div>
                <label>Apartment Name:</label>
                <input @bind="apartment.ApartmentName" class="text-input" placeholder="Enter apartment name" />
            </div>
            <div>
                <label>Address:</label>
                <input @bind="apartment.Address" class="text-input" placeholder="Enter full address" />
            </div>
            <div>
                <label>Email Address:</label>
                <input @bind="apartment.EmailAddress" class="text-input" placeholder="Enter email address" />
            </div>
            <div>
                <label>Apartment Owner:</label>
                <input @bind="apartment.ApartmentOwner" class="text-input" placeholder="Enter owner name" />
            </div>
            <div>
                <label>Contact Number:</label>
                <input @bind="apartment.ContactNo" class="text-input" placeholder="Enter contact number" />
            </div>
            <div>
                <label>Facebook Account:</label>
                <input @bind="apartment.FacebookAccount" class="text-input" placeholder="Enter Facebook account" />
            </div>
        </div>

        <div class="image-upload">
            <p><b>Apartment Image</b></p>

            <!-- Current Image Preview -->
            @if (!string.IsNullOrEmpty(currentImageSrc))
            {
                <div class="image-preview">
                    <img src="@currentImageSrc" alt="Apartment image" class="preview-image" />
                    <button type="button" class="remove-image-btn" @onclick="RemoveImage">Remove Image</button>
                </div>
            }

            <!-- File Upload -->
            <div class="file-upload-area">
                <InputFile accept=".png,.jpg,.jpeg"
                           OnChange="HandleFileSelected"
                           class="file-input"
                           id="fileInput" />
                <label for="fileInput" class="file-input-label">
                    <span>+ Choose Image (PNG, JPG, JPEG)</span>
                </label>
                @if (selectedFile != null)
                {
                    <div class="file-info">
                        <span>Selected: @selectedFile.Name</span>
                        <button type="button" @onclick="ClearSelectedFile">Clear</button>
                    </div>
                }
            </div>

            @if (!string.IsNullOrEmpty(uploadMessage))
            {
                <div class="upload-message @(isUploadError ? "error" : "info")">@uploadMessage</div>
            }
        </div>

        <!-- Units Management Section -->
        <div class="units-header">
            <div><b>Total Units:</b> @rooms.Count</div>
            <div><b>Available:</b> @rooms.Count(r => r.Status == "Available")</div>
            <div><b>Occupied:</b> @rooms.Count(r => r.Status == "Occupied")</div>
            <div><button style="color: #595858" class="add-unit-btn" @onclick="AddNewUnit">+ Add unit</button></div>
        </div>

        <div class="unit-list">
            @if (rooms.Any())
            {
                @foreach (var room in rooms)
                {
                    <div class="unit-card" @key="room.Id">
                        <div class="unit-image">
                            @if (room.ImageData != null && room.ImageData.Length > 0)
                            {
                                <img src="data:@room.ImageContentType;base64,@Convert.ToBase64String(room.ImageData)"
                                     alt="@room.UnitNumber"
                                     class="unit-preview-image" />
                            }
                            else
                            {
                                <div class="unit-image-placeholder">
                                    <span>No Image</span>
                                </div>
                            }
                        </div>
                        <div class="unit-details">
                            <h4>@room.UnitNumber</h4>
                            <p><strong>Type:</strong> @room.RoomType</p>
                            <p><strong>Rent:</strong> ₱@room.RoomPrice.ToString("N2")</p>
                            <p><strong>Beds:</strong> @room.BedCount</p>
                            <p><strong>Aircon:</strong> @(room.Aircon ? "Yes" : "No")</p>
                            <p><strong>Status:</strong> <span class="status-@room.Status.ToLower()">@room.Status</span></p>
                            @if (!string.IsNullOrEmpty(room.Description))
                            {
                                <p><strong>Description:</strong> @room.Description</p>
                            }
                        </div>
                        <button class="edit-unit-btn" @onclick="() => EditUnit(room)">Edit Unit</button>
                    </div>
                }
            }
            else
            {
                <div class="no-units">
                    <p>No units added yet.</p>
                    <p>Click "Add unit" to create your first unit.</p>
                </div>
            }
        </div>

        <div class="footer-actions">
            <button class="save-btn" @onclick="SaveApartment" disabled="@isSaving">
                @if (isSaving)
                {
                    <span>Saving...</span>
                }
                else
                {
                    <span>Save Apartment</span>
                }
            </button>
            @if (!string.IsNullOrEmpty(saveMessage))
            {
                <div class="save-message @(isError ? "error" : "success")">@saveMessage</div>
            }
        </div>
    }
</div>

<!-- Edit Unit Modal -->
@if (showUnitModal)
{
    <div class="modal-overlay visible">
        <div class="modal-content unit-modal">
            <div class="modal-header">
                <h3>@(selectedRoom?.Id != null ? "Edit Unit" : "Add Unit")</h3>
                <button class="close-btn" @onclick="CloseUnitModal">×</button>
            </div>

            <div class="modal-body">
                <div class="form-grid">
                    <div class="form-group">
                        <label>Unit Number:</label>
                        <input @bind="currentRoom.UnitNumber" class="text-input" placeholder="e.g., Unit 101" />
                    </div>

                    <div class="form-group">
                        <label>Monthly Rent (₱):</label>
                        <input type="number" @bind="currentRoom.RoomPrice" class="text-input" placeholder="0.00" step="0.01" />
                    </div>

                    <div class="form-group">
                        <label>Bed Count:</label>
                        <select @bind="currentRoom.BedCount" class="select-input">
                            <option value="1">1 Bed</option>
                            <option value="2">2 Beds</option>
                            <option value="3">3 Beds</option>
                            <option value="4">4 Beds</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Room Type:</label>
                        <select @bind="currentRoom.RoomType" class="select-input">
                            <option value="Single">Single</option>
                            <option value="Double">Double</option>
                            <option value="Studio">Studio</option>
                            <option value="Suite">Suite</option>
                            <option value="Executive">Executive</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Status:</label>
                        <select @bind="currentRoom.Status" class="select-input">
                            <option value="Available">Available</option>
                            <option value="Occupied">Occupied</option>
                            <option value="Maintenance">Maintenance</option>
                        </select>
                    </div>

                    <div class="form-group checkbox-group">
                        <label class="checkbox-label">
                            <input type="checkbox" @bind="currentRoom.Aircon" />
                            <span class="checkmark"></span>
                            Air Conditioning
                        </label>
                    </div>

                    <div class="form-group full-width">
                        <label>Description:</label>
                        <textarea @bind="currentRoom.Description" class="text-input textarea"
                                  placeholder="Enter room description..." rows="3"></textarea>
                    </div>

                    <!-- Unit Image Upload -->
                    <div class="form-group full-width">
                        <label>Unit Image:</label>
                        <div class="image-upload-small">
                            @if (!string.IsNullOrEmpty(currentUnitImageSrc))
                            {
                                <div class="image-preview-small">
                                    <img src="@currentUnitImageSrc" alt="Unit image" class="preview-image-small" />
                                    <button type="button" class="remove-image-btn-small" @onclick="RemoveUnitImage">Remove</button>
                                </div>
                            }

                            <div class="file-upload-area-small">
                                <InputFile accept=".png,.jpg,.jpeg"
                                           OnChange="HandleUnitImageSelected"
                                           class="file-input-small"
                                           id="unitFileInput" />
                                <label for="unitFileInput" class="file-input-label-small">
                                    <span>+ Choose Unit Image</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(unitSaveMessage))
                {
                    <div class="save-message @(isUnitError ? "error" : "success")">@unitSaveMessage</div>
                }
            </div>

            <div class="modal-footer">
                <button class="btn-cancel" @onclick="CloseUnitModal" disabled="@isUnitSaving">Cancel</button>
                <button class="btn-save" @onclick="SaveUnit" disabled="@isUnitSaving">
                    @if (isUnitSaving)
                    {
                        <span>Saving...</span>
                    }
                    else
                    {
                        <span>Save Unit</span>
                    }
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public string ApartmentId { get; set; } = string.Empty;

    [Parameter]
    [SupplyParameterFromQuery(Name = "landlordId")]
    public string? LandlordId { get; set; }

    private Apartment? apartment;
    private List<Room> rooms = new();
    private bool isLoading = true;
    private bool isSaving = false;
    private string saveMessage = "";
    private bool isError = false;
    private string currentImageSrc = "";
    private IBrowserFile? selectedFile;
    private string uploadMessage = "";
    private bool isUploadError = false;

    // Unit Management
    private bool showUnitModal = false;
    private Room? selectedRoom = null;
    private Room currentRoom = new();
    private bool isUnitSaving = false;
    private string unitSaveMessage = "";
    private bool isUnitError = false;
    private string currentUnitImageSrc = "";
    private IBrowserFile? selectedUnitFile;

    protected override async Task OnParametersSetAsync()
    {
        if (!string.IsNullOrEmpty(ApartmentId))
        {
            await LoadApartment();
        }
        else
        {
            isLoading = false;
        }
    }

    private async Task LoadApartment()
    {
        isLoading = true;
        try
        {
            apartment = await ApartmentService.GetApartmentByIdAsync(ApartmentId);
            if (apartment != null)
            {
                // Load rooms for this apartment
                rooms = await RoomService.GetRoomsByApartmentIdAsync(ApartmentId);

                if (apartment?.ImageData != null)
                {
                    currentImageSrc = ImageService.GetImageSrc(apartment.ImageData, apartment.ImageContentType);
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading apartment: {ex.Message}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task AddNewUnit()
    {
        try
        {
            // Create a new room with default values in the database
            var newRoom = await RoomService.CreateRoomAsync(ApartmentId);

            // Open the modal to edit the new room
            selectedRoom = newRoom;
            currentRoom = new Room
            {
                Id = newRoom.Id,
                ApartmentId = newRoom.ApartmentId,
                UnitNumber = newRoom.UnitNumber,
                RoomType = newRoom.RoomType,
                RoomPrice = newRoom.RoomPrice,
                BedCount = newRoom.BedCount,
                Aircon = newRoom.Aircon,
                Status = newRoom.Status,
                Description = newRoom.Description
            };

            showUnitModal = true;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error adding unit: {ex.Message}");
        }
    }

    private void EditUnit(Room room)
    {
        selectedRoom = room;
        currentRoom = new Room
        {
            Id = room.Id,
            ApartmentId = room.ApartmentId,
            UnitNumber = room.UnitNumber,
            RoomType = room.RoomType,
            RoomPrice = room.RoomPrice,
            BedCount = room.BedCount,
            Aircon = room.Aircon,
            Status = room.Status,
            Description = room.Description,
            ImageData = room.ImageData,
            ImageContentType = room.ImageContentType,
            ImageFileName = room.ImageFileName
        };

        if (room.ImageData != null)
        {
            currentUnitImageSrc = ImageService.GetImageSrc(room.ImageData, room.ImageContentType);
        }
        else
        {
            currentUnitImageSrc = "";
        }

        showUnitModal = true;
        StateHasChanged();
    }

    private void CloseUnitModal()
    {
        showUnitModal = false;
        selectedRoom = null;
        currentRoom = new Room();
        currentUnitImageSrc = "";
        selectedUnitFile = null;
        unitSaveMessage = "";
        StateHasChanged();
    }

    private async Task HandleUnitImageSelected(InputFileChangeEventArgs e)
    {
        selectedUnitFile = e.File;

        // Preview the image
        if (selectedUnitFile != null)
        {
            var resizedImageFile = await selectedUnitFile.RequestImageFileAsync("image/png", 200, 200);
            var buffer = new byte[resizedImageFile.Size];
            await resizedImageFile.OpenReadStream().ReadAsync(buffer);
            currentUnitImageSrc = $"data:image/png;base64,{Convert.ToBase64String(buffer)}";
        }

        StateHasChanged();
    }

    private void RemoveUnitImage()
    {
        currentRoom.ImageData = null;
        currentRoom.ImageContentType = "";
        currentRoom.ImageFileName = "";
        currentUnitImageSrc = "";
        selectedUnitFile = null;
        StateHasChanged();
    }

    private async Task SaveUnit()
    {
        if (string.IsNullOrWhiteSpace(currentRoom.UnitNumber))
        {
            unitSaveMessage = "Unit number is required.";
            isUnitError = true;
            StateHasChanged();
            return;
        }

        isUnitSaving = true;
        unitSaveMessage = "";
        isUnitError = false;
        StateHasChanged();

        try
        {
            // Process image upload if a file was selected
            if (selectedUnitFile != null)
            {
                try
                {
                    var (imageData, contentType, fileName) = await ImageService.ProcessUploadAsync(selectedUnitFile);
                    currentRoom.ImageData = imageData;
                    currentRoom.ImageContentType = contentType;
                    currentRoom.ImageFileName = fileName;
                }
                catch (Exception ex)
                {
                    unitSaveMessage = ex.Message;
                    isUnitError = true;
                    isUnitSaving = false;
                    StateHasChanged();
                    return;
                }
            }

            // Update the room in the database
            await RoomService.UpdateRoomAsync(currentRoom.Id, currentRoom);
            unitSaveMessage = "Unit saved successfully!";
            isUnitError = false;

            // Refresh the rooms list
            await LoadApartment();

            // Close modal after delay
            await Task.Delay(1500);
            CloseUnitModal();
        }
        catch (Exception ex)
        {
            unitSaveMessage = "Error saving unit. Please try again.";
            isUnitError = true;
            Console.WriteLine($"Error saving unit: {ex.Message}");
        }
        finally
        {
            isUnitSaving = false;
            StateHasChanged();
        }
    }

    // Your existing methods remain the same
    private void HandleFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        uploadMessage = "";
        isUploadError = false;
        StateHasChanged();
    }

    private void ClearSelectedFile()
    {
        selectedFile = null;
        uploadMessage = "";
        StateHasChanged();
    }

    private void RemoveImage()
    {
        if (apartment != null)
        {
            apartment.ImageData = null;
            apartment.ImageContentType = "";
            apartment.ImageFileName = "";
            currentImageSrc = "";
            StateHasChanged();
        }
    }

    private async Task SaveApartment()
    {
        if (apartment == null) return;

        isSaving = true;
        saveMessage = "";
        isError = false;
        StateHasChanged();

        try
        {
            // Process image upload if a file was selected
            if (selectedFile != null)
            {
                try
                {
                    var (imageData, contentType, fileName) = await ImageService.ProcessUploadAsync(selectedFile);
                    apartment.ImageData = imageData;
                    apartment.ImageContentType = contentType;
                    apartment.ImageFileName = fileName;
                    uploadMessage = "Image processed successfully!";
                    isUploadError = false;
                }
                catch (Exception ex)
                {
                    uploadMessage = ex.Message;
                    isUploadError = true;
                    isSaving = false;
                    StateHasChanged();
                    return;
                }
            }

            await ApartmentService.UpdateApartmentAsync(apartment.Id, apartment);
            saveMessage = "Apartment saved successfully!";
            isError = false;

            await Task.Delay(1000);
            GoBack();
        }
        catch (Exception ex)
        {
            saveMessage = "Error saving apartment. Please try again.";
            isError = true;
            Console.WriteLine($"Error saving apartment: {ex.Message}");
        }
        finally
        {
            isSaving = false;
            StateHasChanged();
        }
    }

    private void GoBack()
    {
        if (!string.IsNullOrEmpty(LandlordId))
        {
            Navigation.NavigateTo($"/ManageApartment?landlordId={LandlordId}");
        }
        else
        {
            Navigation.NavigateTo("/ManageApartment");
        }
    }
}