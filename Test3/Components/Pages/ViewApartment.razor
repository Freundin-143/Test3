@page "/ViewApartment"
@inject NavigationManager Navigation
@rendermode InteractiveServer

<div class="container">
    <header class="header">
        <div class="logo">
            <img src="images/Default_Landlord.png" alt="Logo">
            <h2>LANDLORD PRO</h2>
        </div>

        <div class="contact-info">
            <p><strong>NAME:</strong> JUAN DELA CRUZ</p>
            <p><strong>ADDRESS:</strong> BRGY. 68, RIZAL, LEGAZPI CITY</p>
            <p><strong>FACEBOOK:</strong> MANG JUAN</p>
            <p><strong>EMAIL:</strong> mangjuan123@gmail.com</p>
        </div>

        <div class="summary">
            <p><strong>Total room:</strong> 6</p>
            <p><strong>Available Room:</strong> 2</p>
        </div>
    </header>

    <h3 class="contact-title">CONTACT THE LANDLORD AT:</h3>

    <section class="room-grid">
        @foreach (var room in rooms)
        {
            <div class="room-card">
                <div class="room-img"></div>
                <div class="room-details">
                    <p><strong>Unit Number:</strong> @room.UnitNumber</p>
                    <p><strong>Room type:</strong> @room.RoomType</p>
                    <p><strong>Room Price:</strong> @room.RoomPrice</p>
                    <p><strong>Aircon:</strong> @room.Aircon</p>
                    <p>
                        <strong>Status:</strong>
                        <span class="@(room.Status == "Available" ? "status-available" : "status-occupied")">
                            @room.Status
                        </span>
                    </p>
                </div>
            </div>
        }
    </section>
</div>

@code {
    public class Room
    {
        public string UnitNumber { get; set; }
        public string RoomType { get; set; }
        public string RoomPrice { get; set; }
        public string Aircon { get; set; }
        public string Status { get; set; }
    }

    private List<Room> rooms = new()
    {
        new Room { UnitNumber="101", RoomType="Double Room", RoomPrice="12,000 php", Aircon="Yes", Status="Available"},
        new Room { UnitNumber="102", RoomType="Single Room", RoomPrice="8,000 php", Aircon="No", Status="Occupied"},
        new Room { UnitNumber="103", RoomType="Single Room", RoomPrice="10,000 php", Aircon="Yes", Status="Occupied"},
        new Room { UnitNumber="104", RoomType="Double Room", RoomPrice="12,000 php", Aircon="Yes", Status="Occupied"},
        new Room { UnitNumber="105", RoomType="Single Room", RoomPrice="8,000 php", Aircon="No", Status="Available"},
        new Room { UnitNumber="106", RoomType="Double Room", RoomPrice="12,000 php", Aircon="Yes", Status="Occupied"},
    };
}
